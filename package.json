{
  "name": "cybe",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run css",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --source-map true --source-map-contents true --precision 6 scss -o assets/css/",
    "css-lint": "stylelint scss/",
    "css-prefix": "postcss --replace assets/css/index.css --use autoprefixer --map",
    "css-purge": "purgecss --keyframes --css assets/css/index.css --content index.html \"node_modules/bootstrap/js/dist/{util,modal}.js\" --output assets/css/",
    "css": "npm-run-all css-compile css-prefix",
    "server": "nodemon server.js",
    "serve": "serve --listen 3000",
    "frontend": "live-server",
    "backend": "npm-run-all --parallel watch serve",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm run css-lint && npm run css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ZFranz/cybe.git"
  },
  "author": "Zhiqiang Zhou",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ZFranz/cybe/issues"
  },
  "homepage": "https://github.com/ZFranz/cybe#readme",
  "dependencies": {
    "bootstrap": "^5.1.3",
    "live-server": "^1.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "node-sass": "^7.0.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "purgecss": "^4.1.3",
    "serve": "^13.0.2",
    "stylelint": "^14.1.0",
    "stylelint-config-twbs-bootstrap": "^3.0.0"
  }
}
